# ===========================================
# AutoShorts Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database
# For Vercel: Use Vercel Postgres connection string from dashboard
# For local: postgresql://autoshorts:password@localhost:5432/autoshorts
DATABASE_URL=postgresql://username:password@host:port/database

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis connection string for BullMQ job queue
# Format: redis://username:password@host:port or redis://host:port
# For Vercel: Use Upstash Redis connection string
# For local: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT secret for signing authentication tokens
# Generate with: openssl rand -hex 32
# REQUIRED
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# Master encryption key for API keys (AES-256-GCM)
# Must be exactly 32 bytes (64 hex characters)
# Generate with: openssl rand -hex 32
# REQUIRED
MASTER_KEY=your_64_character_hex_master_key_here

# ===========================================
# GOOGLE OAUTH (User Authentication)
# ===========================================
# Google OAuth 2.0 Client ID for user sign-in
# Get from: https://console.cloud.google.com/apis/credentials
# REQUIRED
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Google OAuth 2.0 Client Secret
# Get from: https://console.cloud.google.com/apis/credentials
# REQUIRED
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google OAuth Redirect URI
# For Vercel: https://your-domain.vercel.app/api/auth/google/callback
# For local: http://localhost:3000/api/auth/google/callback
# REQUIRED
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ===========================================
# YOUTUBE API (Video Uploads)
# ===========================================
# YouTube OAuth Redirect URI (for video uploads)
# For Vercel: https://your-domain.vercel.app/api/auth/youtube/callback
# For local: http://localhost:3000/api/auth/youtube/callback
# REQUIRED
OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/youtube/callback

# Note: Uses same GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET as above
# But you need to add YouTube Data API v3 and YouTube Upload scope
# Enable in: https://console.cloud.google.com/apis/library/youtube.googleapis.com

# ===========================================
# STRIPE PAYMENT PROCESSING
# ===========================================
# Stripe Secret Key (starts with sk_live_ or sk_test_)
# Get from: https://dashboard.stripe.com/apikeys
# REQUIRED for payments
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe Webhook Secret (starts with whsec_)
# Get from: https://dashboard.stripe.com/webhooks
# Add webhook endpoint: https://your-domain.vercel.app/api/payments/webhook/stripe
# Required events: checkout.session.completed, customer.subscription.deleted
# REQUIRED for webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs for subscription plans
# Create prices in Stripe Dashboard: https://dashboard.stripe.com/products
# Get Price IDs from: Stripe Dashboard > Products > Select Product > Pricing
# Format: price_xxxxx
# REQUIRED for each plan you want to offer

# Starter Plan - Monthly
STRIPE_PRICE_ID_STARTER_MONTHLY=price_your_starter_monthly_price_id

# Starter Plan - Yearly
STRIPE_PRICE_ID_STARTER_YEARLY=price_your_starter_yearly_price_id

# Pro Plan - Monthly
STRIPE_PRICE_ID_PRO_MONTHLY=price_your_pro_monthly_price_id

# Pro Plan - Yearly
STRIPE_PRICE_ID_PRO_YEARLY=price_your_pro_yearly_price_id

# Enterprise Plan - Monthly
STRIPE_PRICE_ID_ENTERPRISE_MONTHLY=price_your_enterprise_monthly_price_id

# Enterprise Plan - Yearly
STRIPE_PRICE_ID_ENTERPRISE_YEARLY=price_your_enterprise_yearly_price_id

# ===========================================
# PAYPAL PAYMENT PROCESSING
# ===========================================
# PayPal Client ID
# Get from: https://developer.paypal.com/dashboard/applications/sandbox (sandbox)
#           https://developer.paypal.com/dashboard/applications/live (live)
# REQUIRED for PayPal payments
PAYPAL_CLIENT_ID=your_paypal_client_id

# PayPal Client Secret
# Get from: Same location as above
# REQUIRED for PayPal payments
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# PayPal Mode: 'sandbox' or 'live'
# Use 'sandbox' for testing, 'live' for production
# Default: sandbox
PAYPAL_MODE=sandbox

# ===========================================
# FRONTEND URL
# ===========================================
# Your application's public URL
# For Vercel: https://your-project.vercel.app
# For local: http://localhost:3000
# REQUIRED
FRONTEND_URL=http://localhost:3000

# Next.js public environment variable (same as FRONTEND_URL)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================
# Temporary directory for video processing
# Default: /tmp/autoshorts
# Only change if needed
TEMP_DIR=/tmp/autoshorts

# Logging level: DEBUG, INFO, WARN, ERROR
# Default: INFO
LOG_LEVEL=INFO

# Node environment: development, production, test
# Default: production
NODE_ENV=production
